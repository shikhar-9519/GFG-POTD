class Solution {
    int ans = 0;
    int diameter(Node* root) {
        // Your code here
        calc(root);
        return ans;
    }
    int calc(Node* root){
        if(root==null){
           return 0;
        }
        int left = calc(root.left);
        int right = calc(root.right);
        ans=max(ans, left+right);
        return max(left, right)+1;
    }
}
